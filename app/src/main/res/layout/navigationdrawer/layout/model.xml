<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        android:padding="15dp">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="364dp"
        android:layout_height="136dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bros_sart"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/user_profile" />


        <TextView

            android:id="@+id/nameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bros_sart"
            android:text="Name"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTxt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/bros_sart"
            android:text="Adress"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/textViewTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewAddress"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/bros_sart"
            android:paddingRight="15dp"
            android:text="Phone Number"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/goldcard"
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@+id/textViewAddress"
            android:layout_below="@id/textViewTel"
            android:src="@drawable/gold" />

        <TextView
            android:id="@+id/textViewGoldcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/goldcard"
            android:text="10%"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/standard"
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:layout_below="@id/textViewTel"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/textViewGoldcard"
            android:src="@drawable/standard" />

        <TextView
            android:id="@+id/textViewStandardcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/standard"
            android:text="5%"
            android:textStyle="bold" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
